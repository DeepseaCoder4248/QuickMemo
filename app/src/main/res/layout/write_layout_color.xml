<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/write_activity_menu_popup"
            android:elevation="2dp"
            android:padding="3dp">


            <LinearLayout
                android:id="@+id/llColorMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_write_activity_menu_color_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    app:srcCompat="@drawable/write_activity_color_black" />

                <ImageView
                    android:id="@+id/tv_write_activity_menu_color_red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    app:srcCompat="@drawable/write_activity_color_red" />

                <ImageView
                    android:id="@+id/tv_write_activity_menu_color_orange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    app:srcCompat="@drawable/write_activity_color_orange" />

                <ImageView
                    android:id="@+id/tv_write_activity_menu_color_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    app:srcCompat="@drawable/write_activity_color_yellow" />

                <ImageView
                    android:id="@+id/tv_write_activity_menu_color_green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    app:srcCompat="@drawable/write_activity_color_green" />

                <ImageView
                    android:id="@+id/tv_write_activity_menu_color_sky"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    app:srcCompat="@drawable/write_activity_color_sky" />

                <ImageView
                    android:id="@+id/tv_write_activity_menu_color_blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    app:srcCompat="@drawable/write_activity_color_blue" />

                <ImageView
                    android:id="@+id/tv_write_activity_menu_color_purple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    app:srcCompat="@drawable/write_activity_color_purple" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>