<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetUserInfoActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="448dp" />

    <TextView
        android:id="@+id/tv_reset_user_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#26000000"
        android:text="이메일을 입력하세요"
        android:textAlignment="center"
        android:textColor="#262626"
        android:textColorHint="#26000000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="201dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="233dp" />

    <EditText
        android:id="@+id/edt_reset_user_activity_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:backgroundTint="#26000000"
        android:ems="10"
        android:inputType="textWebPassword"
        android:textColor="#262626"
        android:textColorHint="#26000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:inputType="textWebEmailAddress"
        tools:layout_editor_absoluteY="308dp" />

    <TextView
        android:id="@+id/tv_reset_user_activity_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력한 정보를 가지고 있지 않습니다"
        android:textAlignment="center"
        android:textColor="#FF6868"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="353dp" />

    <TextView
        android:id="@+id/tv_reset_user_activity_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증요청"
        android:textAlignment="center"
        android:textColor="#FF5353"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="448dp" />

</androidx.constraintlayout.widget.ConstraintLayout>